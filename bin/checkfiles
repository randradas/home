#!/bin/bash

LOGGER=$(which logger)
ZENITY=$(which zenity)
ECHO=$(which echo)

function usage {
  echo 'e.g: checkfiles myhost.mydomain.com /home/ftp/pub/inbound/'
  exit 1
}


[ $# -gt 2 ] && usage
[ -z "$1" ] && usage
[ -z "$2" ] && usage

FILES=$(ssh $1 ls -1 $2)
[ ! -z "$FILES" ] && $ECHO -e "\e[32mfiles in $1:$2 found" || $ECHO -e "\e[31mno files found in $1:$2"

exit 0
