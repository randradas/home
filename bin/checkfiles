#!/bin/bash

LOGGER=$(which logger)
ZENITY=$(which zenity)


function usage {
  echo 'e.g: checkfiles myhost.mydomain.com /home/ftp/pub/inbound/'
  exit 1
}


[ $# -gt 2 ] && usage
[ -z "$1" ] && usage
[ -z "$2" ] && usage

FILES=$(ssh $1 ls -1 $2)
[ ! -z "$FILES" ] && $ZENITY --info --text="Files in bancomerftp/inbound" --display=:0.0 || $LOGGER "no files found in $1:$2"

exit 0
